<div class="edit">
  <h2><%= @article.title %></h2>
  <p><%= @article.content %></p>

  <%= link_to edit_article_path(@article) do %>
  <i class="far fa-edit"></i>
  <% end %>

  <%= link_to article_path(@article),
    method: :delete,
    data: { confirm: "confirm your delete?" } do %>
  <i class="far fa-trash-alt"></i>
  <% end %>

  <%= link_to "Back", articles_path %>
</div>
